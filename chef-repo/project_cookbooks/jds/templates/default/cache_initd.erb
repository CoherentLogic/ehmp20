#!/bin/bash
#
# cache        Startup script for Cache'
#
# chkconfig: - 85 15
# description: CACHÃ‰ is a multidimensional database that uniquely combines robust
#             objects and robust SQL, thus eliminating object-relational mapping.
# processname: cache
# config: /usr/cachesys

# Source function library.
. /etc/rc.d/init.d/functions

# Path to the ccontrol, csession
cstart=<%= @cache_dir %>/cstart
cstop=<%= @cache_dir %>/cstop
csession=/usr/bin/csession
prog=<%= @cache_service %>
lockfile=${LOCKFILE-/var/lock/subsys/cache}
RETVAL=0

start() {
  # if [ -e /usr/cachesys/first_boot ]
  # then
  #   /usr/cachesys/bin/firstboot.sh cache
  #   rm -f /usr/cachesys/first_boot
  # fi
        echo -n $"Starting $prog: "
        $cstart > /dev/null 2>&1
        RETVAL=$?
  if [ $RETVAL = 0 ]
  then
    echo_success
    touch ${lockfile}
  fi
        echo
        return $RETVAL
}
stop() {
  echo -n $"Stopping $prog: "
  $cstop quietly
  RETVAL=$?
  if [ $RETVAL = 0 ]
  then
    echo_success
    rm -f ${lockfile}
  fi
  echo
}
restart(){
    stop
    start
}
condrestart(){
    [ -e ${lockfile} ] && restart
}

# See how we were called.
case "$1" in
  start)
  start
  ;;
  stop)
  stop
  ;;
  status)
        status cache
  RETVAL=$?
  ;;
  restart)
  restart
  ;;
  condrestart)
  condrestart
  ;;
  *)
  echo $"Usage: $prog {start|stop|status|restart|condrestart}"
  exit 1
esac

exit $RETVAL
